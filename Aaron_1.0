#!/usr/bin/perl -w

use strict;
use lib $ENV{'AARON'};
use lib $ENV{'PERL_LIB'};

use AaronInit qw(init_main $parent write_status);
use AaronDriver qw(make_directories get_status_run analyze_result);
use AaronOutput qw(init_log print_status terminate_AARON sleep_AARON);
#initiate AARON, reading needed information from command line and input files
init_main();
init_log(print_params=>1);
#clean_up($parent);

my $Aaron_running = 1;

while ($Aaron_running) {
    make_directories();
    get_status_run();
    $Aaron_running = print_status();
    analyze_result();
    write_status();
    last unless $Aaron_running;
    sleep_AARON();
}

terminate_AARON();
